<table>
    <h1>Credito Con Sistema {{sistema}}</h1>
    <p>Capital inicial {{capital}} - Tasa anual {{tasa}}%</p>
    <thead>
        <th>Cuota</th>
        <th>Monto</th>
        <th>Resto</th>
    </thead>
    <tbody>
        {{#cuotas}}
        <tr>
            <td>{{numero}}</td>
            <td>{{monto}}</td>
            <td>{{resto}}</td>
        </tr>
        {{/cuotas}}
    </tbody>
</table>